                                 <input class=" input form-control form-control-solid commentaire" id="secondComment" style="display:none;border:none;" type="text" placeholder="Add new message" required="required"/>

                                        <button id="my_comment_activation" class="btn mx-2" style="background:#929292;color:#bfbfbf;border-radius:50px"  data-toggle="modal" data-target="#message">Comment</button>
                                       <button type="submit" onclick="sentNegociation()" style="display:flex;justify-content:center;align-items:center;border:none" class="btn d-flex align-items-center p-2 mx-2" >
                                          <i class="fa fa-paper-plane-o" style="color:#1b5fe8"></i><span class=" ml-1" style="color:#1b5fe8">Send</span></button>
                                    </form>

                                      <!-- MODAL RATE START -->
   <div class="modal fade" id="message" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Enter a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&amp;times;</span>
        </button>
      </div>
   <div class="" style="display: flex;justify-content: center;align-items: center;flex-direction: column;padding:5px" >
     <input class="col-md-12 input form-control form-control-solid" id="firstComment" style="margin-bottom:10px;margin-top:20px" type="text" placeholder="Add new message" required="required"/>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" onclick="sentNegociationModal()" data-dismiss="modal" class="btn btn-primary"><i class="fa fa-paper-plane-o"></i><span class=" ml-1">Send</span></button>
      </div>
    </div>
  </div>
</div>
